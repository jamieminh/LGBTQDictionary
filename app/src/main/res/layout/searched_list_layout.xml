<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvWordGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPaddingBottom="1dp"
        app:cardBackgroundColor="@color/card_bottom_border"
        >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvRecentSearchWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A dictionary word"
            android:textSize="16sp"
            android:textColor="#343434" />

        <TextView
            android:id="@+id/tvRecentSearchSpelling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="spelling" />

        <TextView
            android:id="@+id/tvRecentSearchDefinition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRecentSearchWord"
            android:layout_marginTop="10dp"
            android:text="Some long long long definition goes here"
            />




    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>