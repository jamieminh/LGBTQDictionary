<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBookmarkedWord"
        android:background="@drawable/ripple_effect"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        app:contentPaddingBottom="8dp"
        app:contentPaddingTop="8dp"
        android:layout_height="80dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvBookmarkedWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textColor="#131313"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBookmarkedWordDefinition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="#343434" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/bookmarked_arrow"
                android:layout_toStartOf="@+id/ivRemoveBookmarked"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/ic_word_arrow_24" />

            <ImageView
                android:id="@+id/ivRemoveBookmarked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                app:srcCompat="@drawable/ic_bookmarks_delete_24"
                android:contentDescription="@string/bookmarked_remove" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/cvBookmarkedWord"
        android:background="@android:color/darker_gray"/>



</RelativeLayout>